<h1 class="my-4 text-primary"> Edit Password </h1>

<%= form_with model: Current.user, url: edit_password_path, local: true, data: { turbo: false } do |form|  %>
    <%= render "shared/form_errors", form: form %>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your new password"%>
    </div>

    <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your new password"%>
    </div>

    <div class="mb-3">
       <%= form.submit "Update Password", class:"btn btn-primary"%>
    </div>
<% end %>

